champ_choice = random.choice(champ)

count = 0
budget = 0

if count == 0:
    start_bonus = 100
    budget += start_bonus


if champ_choice == "Euro":
    team_first_choice = random.choice(euro)
    team_first_coefficient = round(random.uniform(1, 4), 2)
    team_secand_choice = random.choice(euro)
    team_secand_coefficient = round(random.uniform(1, 4), 2)
    equal_coefficient = round(random.uniform(1, 4), 2)


    while team_first_choice == team_secand_choice:
        team_secand_choice = random.choice(euro)
    while team_first_coefficient == team_secand_coefficient or equal_coefficient == team_first_coefficient or equal_coefficient == team_secand_coefficient:
        team_secand_coefficient = round(random.uniform(1, 4), 2)
        equal_coefficient = round(random.uniform(1, 4), 2)

    print(f'{team_first_choice} / {team_first_coefficient} vs({equal_coefficient}) {team_secand_choice} / {team_secand_coefficient}')

else:
    team_first_choice = random.choice(word)
    team_first_coefficient = round(random.uniform(1, 4), 2)
    team_secand_choice = random.choice(word)
    team_secand_coefficient = round(random.uniform(1, 4), 2)
    equal_coefficient = round(random.uniform(1, 4), 2)

    while team_first_choice == team_secand_choice:
        team_secand_choice = random.choice(word)
    while team_first_coefficient == team_secand_coefficient or equal_coefficient == team_first_coefficient or equal_coefficient == team_secand_coefficient:
        team_secand_coefficient = round(random.uniform(1, 4), 2)
        equal_coefficient = round(random.uniform(1, 4), 2)

    print(f'{team_first_choice}/{team_first_coefficient} vs({equal_coefficient}) {team_secand_choice}/{team_secand_coefficient}')
